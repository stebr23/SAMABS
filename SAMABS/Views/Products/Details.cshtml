@model SAMABS.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="row d-flex align-items-center ">
    <div id="product-img-container" class="col-sm-6 animated fadeIn align-self-stretch">
        <div id="product-image" style="background:url(../../images/@Html.DisplayFor(model => Model.ImageName)) no-repeat center;background-size: cover;"></div>
    </div>

    <div class="col-sm-6 animated fadeIn">
        <div class="d-flex flex-column justify-content-between">
            <h1>@Html.DisplayFor(model => model.Name)</h1>
            <p>@Html.DisplayFor(model => model.Description)</p>
            <h3>@Html.DisplayFor(model => model.Price)</h3>
            <button class="btn btn-outline-light">Add To Cart</button>
        </div>
    </div>
</div>

<a class="d-flex align-items-baseline" asp-action="Index"><div class="triangle"></div><h4>Back to List</h4></a>
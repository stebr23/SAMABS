<div class="row">

    <div class="col-xs-12 col-sm-4">

        <div class="sidebar list-group d-none d-sm-block">

                <a href="#" class="list-group-item list-group-item-action active">All</a>
                @foreach (var cat in Model.categories)
            {
                <a href="#" class="list-group-item list-group-item-action">@cat.Text</a>
        }

        </div>

        <div class="sidebar list-group d-sm-none">

            <button class="btn list-group-item navbar-toggler active" id="categories-button" data-toggle="collapse" data-target="#cat-menu" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle categories">
                Categories
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div id="cat-menu" class="collapse">

                <a href="#" class="list-group-item list-group-item-action active">All</a>
                @foreach (var cat in Model.categories)
                {
                    <a href="#" class="list-group-item list-group-item-action">@cat.Text</a>
                }

            </div>

        </div>

    </div>

    <div class="col-xs-12 col-sm-8 animated fadeIn">
        <div class="d-flex flex-wrap justify-content-around">
            @foreach (var product in Model.products)
            {
                <a asp-action="Details" asp-route-id="@product.ID">
                    <div class="card">
                        <div class="card-img-top" style="background:url(../images/@Html.DisplayFor(model => product.ImageName)) no-repeat center;background-size: cover;" height="125px" width="190px" alt="Card image cap"></div>
                        <div class="card-body" data-toggle="tooltip" title="View Item Details" data-placement="bottom">
                            <h6 class="card-title">@Html.DisplayFor(modelItem => product.Name)</h6>
                            <p class="card-text">@Html.DisplayFor(modelItem => product.Price)</p>
                        </div>
                    </div>
                </a>
            }


        </div>
    </div>
</div>
